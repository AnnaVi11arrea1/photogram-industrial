<div class="row mb-4">

  <div class="col-md-6 offset-md-3">
    <div class="card-body">
      <div class="card">
        <% @user.liked_photos.each do |photo| %>
          <div>
            <h5><%= photo.owner.username %></h5>
            <%= image_tag photo.image, class: "card-img-top"%>
          </div>
          <div>
            <%= photo.caption %>
            <br>
            <% photo.comments.each do |comment| %>
              <%= comment.id %>
              <%= comment.body %>
            <% end %>

            <%= form_with(model: photo) do |form| %>
              <div class="card">
                <%= form.label :body, style: "visibility: hidden"  %>
                <%= form.text_area :body %>
              </div>
              <div class="card">
                <%= form.submit %>
              </div>
            <% end %>

          </div>
        <% end %>
      </div>
    </div>

  </div>

</div>
