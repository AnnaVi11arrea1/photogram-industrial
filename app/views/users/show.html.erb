<div class="d-flex row mb-4">
  <div class="col-md-6 offset-3">
    <h1><%= @user.username %></h1>
    <div class="d-flex justify-content-between">
      <div class="d-flex flex-row">
        <div><%= link_to "Followers", follow_requests_path(@user.username), class: "nav-link" %></div>
      </div>
      <div class="d-flex flex-row">
        <div><%= link_to "Following", follow_requests_path(@user.username), class: "nav-link" %></div>
      </div>
      <div class="d-flex flex-row">
        <div><%= link_to "Pending", follow_requests_path(@user.username), class: "nav-link" %></div>
      </div>
      <div class="d-flex flex-row">
        <div><%= link_to "Posts", user_path(@user.username), class: "nav-link" %></div>
      </div>
      <div class="d-flex flex-row">
        <div><%= link_to "Liked photos", liked_path(@user.username), class: "nav-link" %></div>
      </div>
    </div>
  </div>

  <% @user.own_photos.each do |photo| %>
    <%= render "photos/photo", photo: photo %>
  <% end %>
